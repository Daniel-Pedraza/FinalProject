@page
@model FinalProject.Pages.Pricings.EditModel
@{
    ViewData["Title"] = "Edit Pricing";
}

<h2>Edit Pricing Package</h2>

<form method="post">
    <input type="hidden" asp-for="Pricing.PricingID" />

    <div class="form-group">
        <label asp-for="Pricing.Description"></label>
        <input asp-for="Pricing.Description" class="form-control" />
        <span asp-validation-for="Pricing.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pricing.Location"></label>
        <input asp-for="Pricing.Location" class="form-control" />
        <span asp-validation-for="Pricing.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pricing.Price"></label>
        <input asp-for="Pricing.Price" class="form-control" />
        <span asp-validation-for="Pricing.Price" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
