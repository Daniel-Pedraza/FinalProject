@page
@model FinalProject.Pages.Contacts.CreateModel
@{
    ViewData["Title"] = "Create Contact Message";
}

<h2>Create Contact</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Contact.Name"></label>
        <input asp-for="Contact.Name" class="form-control" />
        <span asp-validation-for="Contact.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact.Email"></label>
        <input asp-for="Contact.Email" class="form-control" />
        <span asp-validation-for="Contact.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact.PhoneNumber"></label>
        <input asp-for="Contact.PhoneNumber" class="form-control" />
        <span asp-validation-for="Contact.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact.Message"></label>
        <textarea asp-for="Contact.Message" class="form-control"></textarea>
        <span asp-validation-for="Contact.Message" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact.MemberID">Preferred Band Member (Optional)</label>
        <select asp-for="Contact.MemberID" class="form-control"
                asp-items="Model.MemberList">
            <option value="">-- Select Member --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Contact.PricingID">Pricing Tier (Optional)</label>
        <select asp-for="Contact.PricingID" class="form-control"
                asp-items="Model.PricingList">
            <option value="">-- Select Pricing --</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
